@using PagedList.Mvc
@model PagedList.IPagedList<edziennik.Models.ViewModels.SubjectViewModel>

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">@Html.Raw(ViewBag.Error)</div>
}

<p>
    @Html.ActionLink("Stwórz nowy", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nazwa", "Index", new { sortOrder = ViewBag.NameSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Nauczyciel", "Index", new { sortOrder = ViewBag.TeacherSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Klasa", "Index", new { sortOrder = ViewBag.ClassSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Sala", "Index", new { sortOrder = ViewBag.ClassroomSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Godzina zajęć", "Index", new { sortOrder = ViewBag.HourSort, page = Model.PageNumber })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classroom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hour)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))