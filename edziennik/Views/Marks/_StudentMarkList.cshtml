@using Microsoft.AspNet.Identity
@model PagedList.IPagedList<edziennik.Models.ViewModels.StudentMarkListItemViewModel>
@{
    var ajaxOptions = new AjaxOptions
                     {
                         HttpMethod = "GET",
                         InsertionMode = InsertionMode.Replace,
                         UpdateTargetId = "MarkList"
                     };
}

<table class="table">
    <tr>
        <th>
            @Ajax.ActionLink("Klasa", "StudentMarks", new { sortOrder = ViewBag.ClassSort, page = Model.PageNumber, studentId = Model[0].StudentId, subjectId = Model[0].SubjectId }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Uczeń", "StudentMarks", new { sortOrder = ViewBag.StudentSort, page = Model.PageNumber, studentId = Model[0].StudentId, subjectId = Model[0].SubjectId }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Nauczyciel", "StudentMarks", new { sortOrder = ViewBag.TeacherSort, page = Model.PageNumber, studentId = Model[0].StudentId, subjectId = Model[0].SubjectId }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Przedmiot", "StudentMarks", new { sortOrder = ViewBag.SubjectSort, page = Model.PageNumber, studentId = Model[0].StudentId, subjectId = Model[0].SubjectId }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Ocena", "StudentMarks", new { sortOrder = ViewBag.ValueSort, page = Model.PageNumber, studentId = Model[0].StudentId, subjectId = Model[0].SubjectId }, ajaxOptions, null)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Classs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @if (User.IsInRole("Teachers") || User.Identity.GetUserId() == item.TeacherId)
                {
                    @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                }
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @if (User.IsInRole("Teachers") || User.Identity.GetUserId() == item.TeacherId)
                {
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>
    }

</table>
