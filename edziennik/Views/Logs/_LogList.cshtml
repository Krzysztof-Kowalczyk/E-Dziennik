@model PagedList.IPagedList<edziennik.Models.ViewModels.LogListItemViewModel>

@{
    var ajaxOptions = new AjaxOptions
                     {
                         HttpMethod = "GET",
                         InsertionMode = InsertionMode.Replace,
                         UpdateTargetId = "LogList"
                     };
}

<table class="table">
    <tr>
        <th>
            @Ajax.ActionLink("Data", "Index", new { sortOrder = ViewBag.DateSort, page = Model.PageNumber }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Akcja", "Index", new { sortOrder = ViewBag.ActionSort, page = Model.PageNumber }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Kto", "Index", new { sortOrder = ViewBag.WhoSort, page = Model.PageNumber }, ajaxOptions, null)
        </th>
        <th>
            @Ajax.ActionLink("Co", "Index", new { sortOrder = ViewBag.WhatSort, page = Model.PageNumber }, ajaxOptions, null)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Who)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.What)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

