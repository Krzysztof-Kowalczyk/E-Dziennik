@using PagedList.Mvc
@model PagedList.IPagedList<edziennik.Models.ViewModels.StudentMarkListItemViewModel>
@section scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
}

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

@{
    ViewBag.Title = "Oceny ucznia";
}

@if (Model.Any())
{
    <h2>Index</h2>

    <div id="MarkList">
        @Html.Partial("_StudentMarkList")
    </div>

    @Html.PagedListPager(Model, page => Url.Action("StudentMarks", new {page, pageSize = Model.PageSize, studentId = Model[0].StudentId}))

}
else
{
    <br/>
    <p>Brak ocen do wyświetlenia</p>
}