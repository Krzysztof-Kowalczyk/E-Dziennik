@using PagedList.Mvc
@model PagedList.IPagedList<edziennik.Models.ViewModels.StudentListItemViewModel>

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">@Html.Raw(ViewBag.Error)</div>
}

<p>
    @Html.ActionLink("Stwórz nowy", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Imię", "Index", new { sortOrder = ViewBag.FirstNameSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Drugie imię", "Index", new { sortOrder = ViewBag.SecondNameSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Nazwisko", "Index", new { sortOrder = ViewBag.SurnameSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Pesel", "Index", new { sortOrder = ViewBag.PeselSort, page = Model.PageNumber })
        </th>
        <th>
            @Html.ActionLink("Klasa", "Index", new { sortOrder = ViewBag.ClassSort, page = Model.PageNumber })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                @if(User.IsInRole("Teachers"))
                { 
                @Html.ActionLink("Dodaj ocenę", "Create", "Marks", new { studentId = item.Id }, new { @class = "btn btn-primary" })
                }

            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
